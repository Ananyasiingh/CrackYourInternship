class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int profit = 0;
        int min = INT32_MAX;
        for (int i = 0; i < prices.size(); i++) {
            if (prices[i] < min) { // so here we are somehow finding the
                                   // smallest number out of the whole array
                min = prices[i];
            } else {
                profit = max(profit, prices[i] - min);
            }
        }
        return profit;
    }
};
